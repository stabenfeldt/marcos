- content_for :breadcrumb do
  li= link_to 'Customers', customers_path
  li= link_to @bike.customer.name, @bike.customer
  li
    strong= @bike.name


.pull-right
  = link_to 'Edit', edit_customer_bike_path(@bike.customer,@bike), class: 'btn '
  = link_to 'Destroy', customer_bike_path(@bike.customer, @bike), method: :delete,
    data: { confirm: "Are you sure?" }, class: 'btn'
p
  h2= @bike.name
  span= @bike.year


hr


.box-shadow
  h6 = "Register new service for #{@bike.name}"
  .container
    = render 'services/form'



/.box-shadow
  h5 Available parts
  = form_for [@customer, @bike] do |f|
    = collection_check_boxes(:bike, :part_ids,
      @parts, :id, :name, value: true)  do |c|
        .checkbox
          = c.label { c.check_box + c.text }
    = f.submit

  - if @bike.parts.present?
    .panel.panel-default
      .panel-heading Parts
        table.table
          thead
            tr
              th Brand
              th Model
              th Year
              th Link to techdoc
          tbody
            - @parts.each do |p|
              tr
                td = p.name

